# Database Configuration
# Para Railway: Railway provee DATABASE_URL automáticamente cuando agregas PostgreSQL
# Formato: jdbc:postgresql://host:puerto/database
DATABASE_URL=jdbc:postgresql://localhost:5432/inmomarket
DATABASE_USERNAME=tu_usuario_postgres
DATABASE_PASSWORD=tu_contraseña_postgres

# JWT Configuration
# IMPORTANTE: Genera una clave segura para producción
# Puedes usar: openssl rand -base64 64
JWT_SECRET=tu_clave_secreta_jwt_minimo_256_bits_base64
JWT_EXPIRATION_MS=86400000

# Cloudinary Configuration (opcional, para subida de imágenes)
# Obten tus credenciales en: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=tu_cloudinary_cloud_name
CLOUDINARY_API_KEY=tu_cloudinary_api_key
CLOUDINARY_API_SECRET=tu_cloudinary_api_secret

# Server Port (Railway lo asigna automáticamente)
# No es necesario configurarlo en Railway
PORT=8080
